@model GestaoColaboradores.Models.User.User

@{
    ViewData["Title"] = "Edit";
}
<h1>Editar Usuário</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Login" class="col-form-label">Login</label>
                <input asp-for="Login" value="@Model.Login" class="form-control" readonly />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="col-form-label">Nova Senha</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Active" class="col-form-label">Status</label>
                <select asp-for="Active" value="@Model.Active" class="form-control">
                    <option value=@true>Ativo</option>
                    <option value=@false>Inativo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary ml-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>