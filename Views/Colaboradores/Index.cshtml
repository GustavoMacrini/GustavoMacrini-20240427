@model IEnumerable<GestaoColaboradores.Models.Colaborador.Colaborador>

@{
    ViewData["Title"] = "Index";
}

<h2>Colaboradores</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Unidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Unidade.Name
                </td>
                
                                    
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-name="@item.Name" asp-route-unidadeId="@item.Unidade.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-danger">Excluir</a>
                </td>
            </tr>            
        }
        
    </tbody>
</table>
 
