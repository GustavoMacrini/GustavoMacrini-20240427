@model IEnumerable<GestaoColaboradores.Models.User.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Usuários</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>

<form asp-action="Index" class="mb-2">
    <label for="status" class="mr-2">Status:</label>
    <div class="d-flex">
        <select id="status" name="status" class="form-control form-control-sm" style="width: 120px;">
            <option value="">Todos</option>
            <option value="true">Ativo</option>
            <option value="false">Inativo</option>
        </select>
        <div>
            <input type="submit" value="Filtrar" class="btn btn-secondary" />
        </div>
    </div>    
</form>

<table class="table">
    <thead>
        <tr>
            <th>Login</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @if (item.Active)
                    {
                        <span class="text-success">Ativo</span>
                    }
                    else
                    {
                        <span class="text-danger">Inativo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
